<div class="content-wrapper">
 <div class="content-header">
   <div class="container-fluid">
     <div class="row mb-2">
       <div class="col-sm-6">
         <h1 class="m-0 text-dark">Quality Improvements</h1>
       </div><!-- /.col -->
       <div class="col-sm-6">
         <ol class="breadcrumb float-sm-right">
           <li class="breadcrumb-item"><a href="<%= root_path%>">Home</a></li>
           <li class="breadcrumb-item active">Quality Improvements</li>
         </ol>
       </div>
     </div>
   </div>
 </div>


 <section class="content">
   <div class="container-fluid">
     <div class="row d-flex justify-content-center">
       <div class="col-lg-4 col-6">
         <div class="small-box bg-info">
           <div class="inner">
             <h3><%= rand(10..30)%></h3>
             <p>Well Child Care</p>
           </div>
           <div class="icon">
             <i class="ion ion-bag"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-4 col-6">
         <div class="small-box bg-success">
           <div class="inner">
            <h3><%= rand(10..30)%></h3>
             <p>ED Follow Ups</p>
           </div>
           <div class="icon">
             <i class="ion ion-stats-bars"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-4 col-6">
         <div class="small-box bg-warning">
           <div class="inner">
             <h3><%= rand(10..30)%></h3>
             <p>Counseling</p>
           </div>
           <div class="icon">
             <i class="ion ion-person-add"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-4 col-6">
        
         <div class="small-box bg-danger">
           <div class="inner">
             <h3><%= rand(10..30)%></h3>
             <p>Immunization</p>
           </div>
           <div class="icon">
             <i class="ion ion-pie-graph"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-4 col-6">
        <a href="/demo_workflow">
        <div class="small-box bg-primary">
           <div class="inner">
             <h3>&nbsp;</h3>
             <p>Create Quality Improvement Drive</p>
           </div>
           <div class="icon">
             <i class="ion ion-pie-graph"></i>
           </div>
         </div>
        </a>
         
       </div>
     </div>
     <div class="row">
      <div class="col-lg-12">
        <div class="card">
         
          <div class="card-body table-responsive p-0">
              <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                      <th>QI Goal Name</th>
                      <th>Category</th>
                      <th>Target Members</th>
                      <th>Not Started</th>
                      <th>In Progress</th>
                      <th>Completed</th>
                      <th width="150px">QI Goal Start Date</th>
                      <th width="150px">QI Goal End Date</th>
                      <th>Status</th>
                      <th width="150px">Publish On</th>
                      <th>Publish By</th>
                    </tr>
                </thead>
                <tbody>
                 <% name_list =[] %>
                  <% 4.times do %>
                    <%name_list <<  fake_user_name %>
                  <% end %>
                  <tr>
                    <td>
                      <a href="/quality_improvements/details">
                      Aug23WellChildVisits
                      </a>
                    </td>
                    <td>
                      Well Child Care
                    </td>
                    <td>
                      8956
                    </td>
                    <td>
                      0
                    </td>
                    <td>
                      734
                    </td>
                    <td>
                      8222
                    </td>
                    <td>
                      01 Aug 2023
                    </td>
                    <td>
                      15 Sept 2023
                    </td>
                    <td>
                      Active
                    </td>
                    <td>
                      01 Aug 2023
                    </td>
                    <td>
                      Cathy Jones
                    </td>
                  </tr>

                  <% 100.times do |index| %>
                  <% date = rand(1.year.ago..Time.now)%>
                  <% status = Date.today > (date + 45.days) ? 'Completed' : 'In Progress'%>
                   <tr>
                    <td>
                    <% list = ["Well Child Care","Oral Health Screening","ED Follow Ups","Cancer Screening"] %>
                      <%selected = list.sample%>
                      <a href="/quality_improvements/details">
                        <%= date.strftime('%B%Y-') +  selected %>
                      </a>
                    </td>
                    <td>
                      <%= selected  %>
                    </td>
                    <td>
                      <% total_members = [*1000..9999].sample%>
                      <%= total_members  %>
                    </td>
                    <td>
                      <%= status == "Completed" ? 0 : (total_members * 0.01).round %>
                    </td>
                    
                    <td>
                      <%=  status == "Completed" ? (total_members * 0.02).round : (total_members * 0.14).round %>
                    </td>
                    
                    <td>
                      <%=  status == "Completed" ? (total_members * 0.99).round : (total_members * 0.85).round %>
                    </td>
                    
                    <td>
                      <%= date.at_beginning_of_month.strftime('%d %b %Y')%>
                    </td>
                    <td>
                      <%= (date + 45.days).strftime('%d %b %Y')%>
                    </td>
                    <td>
                       <%= status%>
                    </td>
                    <td>
                      <%= date.at_beginning_of_month.strftime('%d %b %Y')%>
                    </td>
                    <td>
                      <%= name_list.sample  %>
                    </td>
                    
                   </tr>
                   <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div>
 </section>
</div>