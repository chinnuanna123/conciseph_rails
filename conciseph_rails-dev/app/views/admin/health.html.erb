<div class="content-wrapper">
 <div class="content-header">
   <div class="container-fluid">
     <div class="row mb-2">
       <div class="col-sm-6">
         <h1 class="m-0 text-dark">Health Education/ Health Events</h1>
       </div><!-- /.col -->
       <div class="col-sm-6">
         <ol class="breadcrumb float-sm-right">
           <li class="breadcrumb-item"><a href="<%= root_path%>">Home</a></li>
           <li class="breadcrumb-item active">Health Education/ Health Events</li>
         </ol>
       </div>
     </div>
   </div>
 </div>

 <section class="content">
   <div class="container-fluid">
      <div class="row d-flex justify-content-center">
       <div class="col-lg-3 col-6">
         <div class="small-box bg-info">
           <div class="inner">
             <h3><%= rand(10..30)%></h3>
             <p>Health Articles/ Blogs </p>
           </div>
           <div class="icon">
             <i class="ion ion-bag"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-3 col-6">
         <div class="small-box bg-success">
           <div class="inner">
            <h3><%= rand(10..30)%></h3>
             <p>Health Events</p>
           </div>
           <div class="icon">
             <i class="ion ion-stats-bars"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-3 col-6">
         <div class="small-box bg-warning">
           <div class="inner">
             <h3><%= rand(10..30)%></h3>
             <p>Public Health Awareness </p>
           </div>
           <div class="icon">
             <i class="ion ion-person-add"></i>
           </div>
         </div>
       </div>
       <div class="col-lg-3 col-6">
       <a href="/demo_health">
         <div class="small-box bg-danger">
           <div class="inner">
             <h3>&nbsp;</h3>
             <p>Create Event</p>
           </div>
           <div class="icon">
             <i class="ion ion-pie-graph"></i>
           </div>
         </div>
         </a>
       </div>
     </div>
     <div class="row">
      <div class="col-lg-12">
        <div class="card">
           <div class="card-body table-responsive p-0">
              <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                      <th>Health Event/Education Goal Name</th>
                      <th>Category</th>
                      <th>Target Members</th>
                      <th>Not Started</th>
                      <th>In Progress</th>
                      <th>Completed</th>
                      <th>Start Date</th>
                      <th>End Date</th>
                      <th>Status</th>
                      <th>Publish On</th>
                      <th>Publish By</th>
                    </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                     <a href="/health/details">
                      Breast Cancer Screening Dec 23 Drive
                      </A>
                    </td>
                    <td>
                       Breast Cancer Screening
                    </td>
                    <td>
                       960
                    </td>
                    <td>
                       0
                    </td>
                    <td>
                       106
                    </td>
                    <td>
                       854
                    </td>
                    <td>
                    
                       <% start_date =  '01/12/2023'.to_datetime %>
                       <%= start_date.strftime('%A, %d %b %Y ')%>
                    </td>
                    <td>
                      <% end_date =  start_date.at_end_of_month%>
                       <%= end_date.strftime('%A, %d %b %Y ')%>
                    </td>
                    <td>
                        In Progress
                    </td>
                    <td>
                        <%= '17/11/2023'.to_datetime.strftime('%A, %d %b %Y ')%>
                    </td>
                    <td>
                        Frank Kessler
                    </td>
                  </tr>
                  <% 100.times do |index| %>
                  <% date = rand(1.year.ago..Time.now)%>
                  <% list = ['Cervical Cancer Screening','Chlamydia Screening in Women','Nutrition','Fitness','Condition Management'] %>
                   <% selected = list.sample %>
                   <% target = rand(1000..1500) %>
                   <% not_started = rand(0..50)%>
                   <% start_date = (date - 1.month).last_weekday%>
                   <tr>
                    <td>
                      <a href="/health/details">
                      <%= date.strftime('%B%Y-') + selected %>
                      </a>
                    </td>
                    <td>
                      <%= selected %>
                    </td>
                    <td>
                      <%= target %>
                    </td>
                    <td>
                      <%= not_started %>
                    </td>
                    <td>
                      <%= 0 %>
                    </td>
                    <td>
                      <%= target - not_started %>
                    </td>
                    <td>
                      <%= date.beginning_of_month.strftime('%A, %d %b %Y ')%>
                    </td>
                    <td>
                       <%= (start_date + 6.weeks).strftime('%A, %d %b %Y ')%>
                    </td>
                    <td>
                      <%= ["Completed"].sample %>
                    </td>

                    <td>
                      <%= (date.beginning_of_month - 1.week).last_weekday.strftime('%A, %d %b %Y ')%>
                    </td>
                    <td>
                     <%= fake_user_name  %>
                    </td>
                   </tr>
                   <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div>
 </section>
</div>