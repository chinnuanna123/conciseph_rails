<style>
.disabled-link {
  pointer-events: none;
  text-decoration: none;
   opacity: 0.75;
}
</style>
<div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            
            <h1 class="m-0 text-dark">Timely Intervention Goals</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="<%= root_path%>">Home</a></li>
              <li class="breadcrumb-item active">Timely Intervention Goals</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
   
   
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <%= render "shared/panel_index_header", model: TimelyRecoveryGoal %>
        </div>
        <div class="row">
         <div class="col-lg-12">
           <div class="card">
            
             <div class="card-body table-responsive p-0">
                 <table class="table table-striped table-valign-middle">
                   <thead>
                       <tr>
                         <th>QI timely_recovery_goal Name</th>
                         <th>Category</th>
                         <th>Target Members</th>
                         <th>Not Started</th>
                         <th>In Progress</th>
                         <th>Completed</th>
                         <th>Status</th>
                         <th width="150px">Publish On</th>
                         <th>Publish By</th>
                         <th>Actions</th>
                       </tr>
                   </thead>
                   <tbody>                 
                     <%= render 'shared/model_listing', models: @timely_recovery_goals%>
                   </tbody>
                 </table>
             </div>
           </div>
         </div>
       </div>
     </div>
    </section>
   </div>
   <script>
   if('<%= TimelyRecoveryGoal.count  %>' >= '3'){
     $('#new-goal').removeAttr('href')
     $('#new-goal').addClass("disabled-link")
   }
   </script>