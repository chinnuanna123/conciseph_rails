<!-- <h1>Goals</h1> -->
<div class="content-wrapper">
  <%= render 'header' %>
   
  <section class="content">
    <div class="container-fluid">
      
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <%= form_with(model: overseer, local: true) do |form| %>
              <% if overseer.errors.any? %>
                <div id="error_explanation">
                  <h2>
                    <%= pluralize(overseer.errors.count, "error") %> prohibited this <%= overseer.name %> from being saved:
                  </h2>

                  <ul>
                    <% overseer.errors.full_messages.each do |message| %>
                      <li>
                        <%= message %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="card">
                <div class="card-header">
                  Api Access Users Setup
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= form.label :name, class: "form-label required" %>
                        <%= form.text_field :name, class: "form-control", required: true %>
                      </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= form.label :email, class: "form-label required" %>
                        <%= form.text_field :email, class: "form-control", required: true %>
                      </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= form.label :password, class: "form-label required" %>
                        <%= form.password_field :password, class: "form-control", required: true %>
                      </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= form.label :password_confirmation, class: "form-label required" %>
                        <%= form.password_field :password_confirmation, class: "form-control", required: true %>
                      </div>
                    </div>
                        
                      <%= form.hidden_field :role, value: 'api_consumer' %>
                  </div>
                </div>
              </div>
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-1">
                        <div class="actions">
                          <%= form.submit 'Submit',class: "btn btn-primary new-btn" %>
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="actions">
                          <%= link_to 'Cancel', overseers_url, class: "btn btn-danger new-btn" %>
                        </div>
                    </div>
                  </div>

                </div>
              </div>             
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
